<?xml version="1.0"?>
<robot name="first_robot">
    <!-- 机器人的身体部分 -->
    <!-- 添加了一个子部件 -->
    <link name="base_link">
        <!-- 部件的外观描述 -->
        <visual>
            <!-- 基于本身几何中心的偏移量和旋转量 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>

            <!-- 形状 -->
            <geometry>
                <!-- 圆柱体 -->
                <cylinder radius="0.1"  length="0.12"/>
            </geometry>

            <!-- 颜色 -->
            <material name="white">
                <!-- 最后一个值是透明度，1表示不透明 -->
                <color rgba="1 1 1 0.5"/>
            </material>
        </visual>
    </link>

    <!-- imu子部件 -->
    <link name="imu_link">
        <!-- 部件的外观描述 -->
        <visual>
            <!-- 基于本身几何中心的偏移量和旋转量 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>

            <!-- 形状 -->
            <geometry>
                <!-- 长方体 -->
                <box size="0.02 0.02 0.02"/>
            </geometry>

            <!-- 颜色 -->
            <material name="black">
                <!-- 最后一个值是透明度，1表示不透明 -->
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- 连接关节 用于组合机器人的部件-->
    <!-- type=fixed表示两者是固定死的 -->
    <joint name="imu_joint" type="fixed">
        <!-- 连接的父部件 -->
        <parent link="base_link"/>
        <!-- 连接的子部件 -->
        <child link="imu_link"/>
        <!-- 基于父部件的偏移量和旋转量 -->
        <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
    </joint>
</robot>